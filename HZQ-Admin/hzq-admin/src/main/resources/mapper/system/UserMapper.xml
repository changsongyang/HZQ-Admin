<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="hzqing.com.admin.mapper.system.UserMapper" >
  <resultMap id="BaseResultMap" type="com.hzqing.system.domain.User" >
    <id column="id" property="id" jdbcType="VARCHAR" />
    <result column="username" property="username" jdbcType="VARCHAR" />
    <result column="password" property="password" jdbcType="VARCHAR" />

  </resultMap>
  <!--根据用户id删除用户权限-->
  <delete id="deleteUserRoleByUserId" parameterType="String">
    DELETE  FROM  rl_user_role
    WHERE
    user_id = #{0}
  </delete>
  <insert id="batchSave" parameterType="list">
    INSERT INTO rl_user_role(id,user_id,role_id,note)
    VALUES
    <foreach collection="list"  item="item" separator=",">
      (
      (SELECT replace((SELECT uuid()),"-","")),
      #{item.user_id},
      #{item.role_id},
      null
      )
    </foreach>
  </insert>

</mapper>