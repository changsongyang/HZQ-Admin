<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="hzqing.com.admin.mapper.system.MenuMapper">
  <resultMap id="BaseResultMap" type="hzqing.com.admin.entity.system.Menu">
    <id column="id" jdbcType="VARCHAR" property="id" />
    <result column="menu_name" jdbcType="VARCHAR" property="menuName" />
    <result column="code" jdbcType="VARCHAR" property="code" />
    <result column="parent_id" jdbcType="VARCHAR" property="parentId" />
    <result column="href" jdbcType="VARCHAR" property="href" />
    <result column="component" jdbcType="VARCHAR" property="component" />
    <result column="icon" jdbcType="VARCHAR" property="icon" />
    <result column="menu_type" jdbcType="VARCHAR" property="menuType" />
    <result column="note" jdbcType="VARCHAR" property="note" />
    <result column="enabled" jdbcType="CHAR" property="enabled" />
    <result column="sort" jdbcType="INTEGER" property="sort" />
    <result column="attr1" jdbcType="VARCHAR" property="attr1" />
    <result column="attr2" jdbcType="VARCHAR" property="attr2" />
    <result column="attr3" jdbcType="VARCHAR" property="attr3" />
    <result column="attr4" jdbcType="VARCHAR" property="attr4" />
    <result column="attr5" jdbcType="VARCHAR" property="attr5" />
  </resultMap>
  <!--根绝角色id和资源类型，获取资源-->
  <select id="getResIdByRoleIdAndType" parameterType="map" resultType="string">
    SELECT resource_id FROM  rl_role_resource WHERE role_id  = #{roleId} AND resource_type = #{resType}
  </select>
  <!--根据角色id，获取菜单-->
  <select id="getMenusByRids" parameterType="string" resultMap="BaseResultMap">
    SELECT  m.* FROM sys_menu m
    where  find_in_set(m.id,(SELECT  GROUP_CONCAT(resource_id) FROM  rl_role_resource where find_in_set (role_id,#{roleId})))
    AND m.enabled = '1'
    ORDER BY  sort ASC
  </select>
  <!--根绝角色id，获取所有按钮的编码-->
  <select id="getResCodeByRoleIds" resultType="string" parameterType="string">
    SELECT b.code
    FROM sys_button b
    LEFT JOIN rl_role_resource r ON b.id = r.resource_id
    WHERE r.resource_type = 'button'
    AND b.enabled = '1'
    AND find_in_set(r.role_id ,#{ids})
  </select>
</mapper>